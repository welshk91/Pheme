<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/progressbar</item>
    </style>

    <style name="DashboardArticleCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/dashboardArticleCardBorder</item>
        <item name="strokeColor">@color/dashboard_card_border</item>
    </style>

    <style name="DashboardArticleTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dashboardArticleTitle</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleTitleStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleTitleStartEnd</item>
        <item name="android:layout_marginBottom">@dimen/dashboardArticleTitleBottom</item>
    </style>

    <style name="DashboardArticleAuthor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dashboardArticleAuthor</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleAuthorStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleAuthorStartEnd</item>
        <item name="android:layout_marginBottom">@dimen/dashboardArticleAuthorBottom</item>
    </style>

    <style name="DetailsArticleTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/detailsArticleTitle</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleContentMargin</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleContentMargin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailsArticleAuthor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/detailsArticleAuthor</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleContentMargin</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleContentMargin</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailsArticleDivider">
        <item name="android:background">@color/details_divider</item>
        <item name="android:layout_marginTop">@dimen/dashboardArticleDividerMargin</item>
    </style>

    <style name="DetailsArticleDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/detailsArticleDescription</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/dashboardArticleDividerMargin</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleDividerMargin</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleDividerMargin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailsArticleContent" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/detailsArticleContent</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/dashboardArticleContentMargin</item>
        <item name="android:layout_marginStart">@dimen/dashboardArticleContentMargin</item>
        <item name="android:layout_marginEnd">@dimen/dashboardArticleContentMargin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
