<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/progressbar</item>
    </style>

    <style name="DashboardArticleTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dashboardArticleTitle</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
